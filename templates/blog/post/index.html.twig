{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block content %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Status</th>
                <th>Publié le</th>
                <th>Créé</th>
                <th>Mis à jour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.status }}</td>
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i') : '' }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i') : '' }}</td>
                {% dump(post.createdAt) %}
                {% dump(post.updatedAt) %}
                <td>{{ post.updatedAt and post.updatedAt > post.createdAt ? post.updatedAt|date('Y-m-d H:i') : '' }}</td>
                <td>
                    <a href="{{ path('blog_post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('blog_post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blog_post_new') }}">Create new</a>
{% endblock %}
