{% extends 'admin/admin_base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block content %}
    <h1 class="text-teal">Tes Articles</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Status</th>
                <th>Publié le</th>
                <th>Créé</th>
                <th>Mis à jour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.status }}</td>
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i') : '' }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i') : '' }}</td>
                {% dump(post.createdAt) %}
                {% dump(post.updatedAt) %}
                <td>{{ post.updatedAt and post.updatedAt > post.createdAt ? post.updatedAt|date('Y-m-d H:i') : '' }}</td>
                <td>
                    <a href="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_POST_SHOW'), {'id': post.id}) }}" class="btn btn-outline-info">aperçu</a>
                    <a href="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_POST_EDIT'), {'id': post.id}) }}" class="btn btn-outline-teal">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">Tu n'as rédigé aucun article pour le moment...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_POST_NEW')) }}" class="btn btn-outline-orange">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
        </svg>
        Rédiger un article
    </a>
{% endblock %}
