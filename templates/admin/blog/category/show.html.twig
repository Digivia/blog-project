{% extends 'admin/admin_base.html.twig' %}

{% block title %}Category{% endblock %}

{% block content %}
    <h1>Categorie « <small>{{ category.name }}</small> »</h1>
    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>
                    {% if category.enabled %}
                        <i class="bi bi-check-circle-fill text-success"></i>
                    {% else %}
                        <i class="bi bi-x-circle-fill text-danger"></i>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description|raw }}</td>
            </tr>
            <tr>
                <th>Créée le </th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="action mt-3">
        <a href="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_CATEGORY_INDEX')) }}" class="btn btn-outline-secondary">Retour</a>
        <a href="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_CATEGORY_EDIT'), {'id': category.id}) }}" class="btn btn-outline-orange">Modifier</a>
    </div>
    <div class="position-relative">
        {{ include('admin/blog/category/_partials/_delete_form.html.twig') }}
    </div>
{% endblock %}
