{% extends 'admin/admin_base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block content %}
    <h1>Catégories</h1>

    <div class="row">
        <div class="col-12 col-md-6 col-lg-4 d-flex">
            {% import 'admin/blog/category/_macro/tree.macro.html.twig' as macro %}
            <ul class="tree cascade">
                {{ macro.multilevel(categories) }}
            </ul>
        </div>
    </div>
    <a href="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_CATEGORY_INDEX')) }}" class="btn btn-outline-secondary">Ajouter une catégorie</a>
{% endblock %}
