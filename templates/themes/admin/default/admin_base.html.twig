<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('admin') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark dgv-navbar">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_DASHBOARD')) }}">
                        <img src="{{ asset('build/images/logo/digivia.svg') }}" alt="Blog Admin" height="40px">
                    </a>
                    <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse" id="navbarColor01" style="">
                        {{ knp_menu_render('admin_main_menu', {template: '@admin/blog/_menu/admin_main_menu.html.twig'}) }}
                        {% if app.request.attributes.get('search')|default(false) %}
                            <form class="d-flex" method="GET">
                                <input class="form-control me-2 with-reset" type="search" name="search-keyword" placeholder="Mot-clÃ©" aria-label="Search" value="{{ app.request.query.get('search-keyword') }}">
                                <button class="form-reset-icon" type="reset"></button>
                                <button class="btn btn-outline-light" type="submit">{% include '@admin/_partials/svg/search.svg.twig' %}</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </nav>
            {% include('@admin/_partials/_flashbag.html.twig') %}
            <div class="card p-3 bg-dark text-white-50 container-full-height">
                {% block content %}
                {% endblock %}
            </div>
            <footer class="navbar bg-mid-gray dgv-navbar text-white">
                <p class="text-center w-100">
                    <a href="https://www.digivia.fr" class="link-info" data-bs-toggle="tooltip" title="Site web Digivia"><i class="bi bi-share i-2x"></i></a>
                    <a href="https://github.com/Digivia" class="link-info ms-5" data-bs-toggle="tooltip" title="GitHub Digivia"><i class="bi bi-github i-2x"></i></a>
                    <a href="https://packagist.org/packages/digivia/" class="link-info ms-5" data-bs-toggle="tooltip" title="Packagist Digivia"><i class="bi bi-box i-2x"></i></a>
                </p>
            </footer>
        </div>
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('admin') }}
        {% endblock %}
    </body>
</html>
