{% extends '@admin/admin_base.html.twig' %}

{% block title %}Utilisateur {{ user.firstname ~ ' ' ~ user.lastname }}{% endblock %}

{% block content %}
    <h1>Utilisateur « <small>Utilisateur {{ user.firstname ~ ' ' ~ user.lastname }}</small> »</h1>
    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{% if user.enabled %}OUI{% else %}NON{% endif %}</td>
            </tr>
            <tr>
                <th>Créé</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="action mt-3">
        <a href="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_USER_INDEX')) }}" class="btn btn-outline-secondary">Retour</a>
        <a href="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_USER_EDIT'), {'id': user.id}) }}" class="btn btn-outline-orange">Modifier</a>
    </div>
    <div class="position-relative">
        {{ include('@admin/user/_partials/_delete_form.html.twig') }}
    </div>
{% endblock %}
