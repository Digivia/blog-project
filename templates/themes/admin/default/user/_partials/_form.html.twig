{{ form_start(form) }}
    <div class="row">
        <div class="col-12 col-md-6">
            {{ form_row(form.email, {help_attr: {class: 'd-block mb-3'}}) }}
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.firstname, {attr: {class: 'mb-3'}}) }}
            {{ form_row(form.lastname, {attr: {class: 'mb-3'}}) }}
        </div>
        <div class="col-12 col-md-5 offset-lg-1">
            {{ form_row(form.roles, {help_attr: {class: 'd-block mb-3'}}) }}
            {{ form_row(form.enabled, {help_attr: {class: 'd-block mb-3'}}) }}
        </div>
        <div class="col-12">
            <div class="action mt-3">
                <button class="btn btn-outline-orange">{{ button_label|default('Enregistrer') }}</button>
                <a href="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_USER_INDEX')) }}" class="btn btn-outline-secondary">Retour</a>
            </div>
        </div>
    </div>
{{ form_end(form) }}

