<form method="post" action="{{ path(constant('App\\Controller\\RouteCatalog::ADMIN_POST_DELETE'), {'id': post.id}) }}" class="position-absolute top-m-40 r-0" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="btn btn-outline-danger">Supprimer</button>
</form>
